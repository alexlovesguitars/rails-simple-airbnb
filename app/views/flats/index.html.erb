<div>
  <div class="d-flex justify-content-between" id="top-banner">
    <h4 class="mt-2 px-2">Simple AirBnB</h4>
    <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary mt-2 mb-2 mx-2" %>
  </div>

  <div class="container">
    <h1>All our flats</h1>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-md-4 py-3"> <!-- Adjust column size as needed -->
          <div class="card mx-3 my-2" style="height: 300px; box-shadow: 0px 2px 2px black"> <!-- Set a fixed height -->
            <div class="card-body d-flex flex-column"> <!-- Use flexbox for vertical alignment -->
              <h4 class="card-title"><%= flat.name %></h4>
              <h6 class="card-subtitle mb-2"><%= flat.address %></h6>
              <div class="d-flex my-2">
                <p><i class="fa-solid fa-users-line mx-2"></i> <%= flat.number_of_guests %></p>
                <p><i class="fa-solid fa-money-bill mx-2"></i> <%= flat.price_per_night %></p>
              </div>
              <div class="card-info mt-auto d-flex" style="border-radius: 15px"> <!-- Push info link to bottom -->
                <%= link_to "More Info", flat_path(flat), class: "mx-1 btn btn-outline-primary btn-sm" %>
                <%= link_to "Edit", edit_flat_path(flat), class: "mx-1 btn btn-outline-warning btn-sm" %>
                <%= link_to "Remove", flats_path(@flats), class: "mx-1 btn btn-outline-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
